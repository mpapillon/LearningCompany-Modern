<Application
    x:Class="LearningCompany_WinRT.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LearningCompany_WinRT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:vm="using:LearningCompany_WinRT.ViewModel">
    
    <Application.Resources>
        <x:String x:Key="AppName">Learning Company</x:String>
        <vm:ViewModelLocator x:Key="Locator" d:IsDataSource="True" />

        <SolidColorBrush x:Key="LearningCompanyAccentColor" Color="#008cba"/>

        <SolidColorBrush x:Key="ListBoxItemPointerOverBackgroundThemeBrush" Color="#272727" />
        <SolidColorBrush x:Key="ListBoxItemSelectedBackgroundThemeBrush" Color="#008cba" />
        <SolidColorBrush x:Key="ListBoxItemSelectedPointerOverBackgroundThemeBrush" Color="#0078a0" />
        <SolidColorBrush x:Key="ListBoxItemPressedBackgroundThemeBrush" Color="#272727" />

    </Application.Resources>
    
</Application>
